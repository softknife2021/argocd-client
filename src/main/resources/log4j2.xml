<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" strict="true" name="argocd-clientLogConfig">

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%d{HH:mm:ss:SSS} %5p %c{3}:%L - %enc{%m}%n"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="com.softknife" level="debug" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

